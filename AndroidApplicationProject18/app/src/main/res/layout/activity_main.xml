<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_activity_linear_layout_test001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LinearLayoutTest001"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_activity_linear_layout_test002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LinearLayoutTest002"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/btn_activity_linear_layout_test001"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_constraint_layout_test001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConstraintLayoutTest001"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_linear_layout_test001" />

    <Button
        android:id="@+id/btn_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScrollView"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_constraint_layout_test001" />
</androidx.constraintlayout.widget.ConstraintLayout>